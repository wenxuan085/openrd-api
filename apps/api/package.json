{
  "name": "@openrd/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file ../../.env src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node --enable-source-maps dist/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier \"src/**/*.{ts,tsx,js,json}\" --check",
    "format:write": "prettier \"src/**/*.{ts,tsx,js,json}\" --write",
    "test": "vitest"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "openai": "^4.9.0",
    "uuid": "^9.0.0",
    "pino": "^9.5.0",
    "pino-http": "^10.3.1",
    "pino-pretty": "^11.3.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.4.2",
    "supertest": "^7.1.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
